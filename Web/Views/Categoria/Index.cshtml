@{
    ViewBag.Title = "Categorías";
}

@* Estilo del error *@
<style>
    form .error {
        color: red;
    }

    input.error {
        border-color: red;
    }
</style>

@* Creación Tabla categorías *@

<div id="DivTablaCategoria" class="card p-5 rounded">
    <table id="TablaCategoria" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
        <thead class="bg-light">
            <tr>
                <th>Nombre de la Categoría</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@* Formulario para agregar categoría *@

<div id="DivAgregarCategoria" style="display:none" class="container shadow-lg p-4">
    <form class="row" id="FormAgregarCategoria">
        <div class="col-12 pb-5">
            <label for="NombreCategoria" class="form-label">Nombre de la Categoría</label>
            <input type="text" class="form-control" id="NombreCategoria" name="NombreCategoria">
            <div class="invalid-feedback"></div>
        </div>

        <div class="col-12 pb-5">
            <label for="DescripcionCategoria" class="form-label">Descripción</label>
            <textarea class="form-control" id="DescripcionCategoria" name="DescripcionCategoria" rows="3"></textarea>
            <div class="invalid-feedback"></div>
        </div>

        @* botones *@

        <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
            <button id="cancelButtonCategoria" type="button" class="btn btn-danger">
                <i class="fa-solid fa-rotate-left"></i> Cancelar
            </button>
            <button type="button" id="GuardarDatosCategoria" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Agregar
            </button>
        </div>
    </form>
</div>

<div id="DivModificarCategoria" style="display:none" class="container shadow-lg p-4">
    @* Aquí se mostrará el formulario de modificación *@
</div>

@section scripts {
    <script type="text/javascript" src="~/JSVistas/Categoria.js"></script>
}