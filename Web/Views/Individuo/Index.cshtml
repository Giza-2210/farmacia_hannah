﻿﻿
    @{
        ViewBag.Title = "Individuos";
    }


    @* Estilo del error *@
    <style>
        form .error {
            color: red;
        }

        input.error {
            border-color: red;
        }
    </style>

    @* Creación Tabla individuos *@

    <div id="DivTablaIndividuos" class="card p-5 rounded">
        <table id="TablaIndividuos" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
            <thead class="bg-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>


    @* campos a solicitar en la tabla *@

    <div id="DivAgregarIndividuos" style="display:none" class="container shadow-lg p-4">
        <form class="row" id="FormAgregarIndividuos">
            <div class="col-6 pb-5">
                <label for="NombreIndividuos" class="form-label">Nombre </label>
                <input type="text" class="form-control" id="NombreIndividuos" name="NombreIndividuos">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="ApellidoIndividuos" class="form-label">Apellido </label>
                <input type="text" class="form-control" id="ApellidoIndividuos" name="ApellidoIndividuos">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="TelefonoIndividuos" class="form-label">Teléfono </label>
                <input type="text" class="form-control" id="TelefonoIndividuos" name="TelefonoIndividuos">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="DireccionIndividuos" class="form-label">Dirección </label>
                <input type="text" class="form-control" id="DireccionIndividuos" name="DireccionIndividuos">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="EmailIndividuos" class="form-label">Email </label>
                <input type="text" class="form-control" id="EmailIndividuos" name="EmailIndividuos">
                <div class="invalid-feedback"></div>
            </div>

           @* botones *@

            <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
                <button id="cancelButton" type="button" class="btn btn-danger">
                    <i class="fa-solid fa-rotate-left"></i> Cancelar
                </button>
                <button type="button" id="GuardarDatosIndividuos" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Agregar
                </button>
            </div>
        </form>
    </div>

    <div id="DivModificarDepartamento" style="display:none" class="container shadow-lg p-4">
        @*Aqui se muestra el html de la de copia*@
    </div>

    @section scripts {
        <script type="text/javascript" src="~/JSVistas/Individuo.js"></script>
    }