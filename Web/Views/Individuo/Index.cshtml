﻿﻿
    @{
        ViewBag.Title = "Departamentos";
    }


    @* Estilo del error *@
    <style>
        form .error {
            color: red;
        }

        input.error {
            border-color: red;
        }
    </style>


    <div id="DivTablaDepartamentos" class="card p-5 rounded">
        <table id="TablaDeDepartamentos" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
            <thead class="bg-light">
                <tr>
                    <th>Nombre Departamento</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>




    <div id="DivAgregarDepartamento" style="display:none" class="container shadow-lg p-4">
        <form class="row" id="FormAgregarDepartamento">
            <div class="col-12 pb-5">
                <label for="NombreDepartamento" class="form-label">Nombre </label>
                <input type="text" class="form-control" id="NombreDepartamento" name="NombreDepartamento">
                <div class="invalid-feedback"></div>
            </div>




            <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
                <button id="cancelButton" type="button" class="btn btn-danger">
                    <i class="fa-solid fa-rotate-left"></i> Cancelar
                </button>
                <button type="button" id="GuardarDatosDepartamento" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Agregar
                </button>
            </div>
        </form>
    </div>

    <div id="DivModificarDepartamento" style="display:none" class="container shadow-lg p-4">
        @*Aqui se muestra el html de la de copia*@
    </div>

    @section scripts {
        <script type="text/javascript" src="~/JSVistas/Organizacion/Departamentos/Index.js"></script>
    }