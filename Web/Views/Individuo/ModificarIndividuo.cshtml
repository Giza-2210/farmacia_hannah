@model modelo.Individuo_VM

<div id="DivAgregarIndividuos"  class="container shadow-lg p-4">
    <form class="row" id="FormEditarindividuo">

        @Html.HiddenFor(model => model.IdIndividuos)

        <div class="col-6 pb-5">
            <label for="NombreIndividuos" class="form-label">Nombre </label>
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control"} })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="ApellidoIndividuos" class="form-label">Apellido </label>
            @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="Telefono" class="form-label">Teléfono </label>
            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="DireccionIndividuos" class="form-label">Dirección </label>
            @Html.TextAreaFor(
                model => model.Direccion,
                new {
                    @class = "form-control",
                    rows = "4",
                    id = "Direccion"
                }
            )
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="EmailIndividuos" class="form-label">Email </label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>

        @* botones *@

        <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
            <button id="cancelButton" type="button" class="btn btn-danger">
                <i class="fa-solid fa-rotate-left"></i> Cancelar
            </button>
            <button type="button" id="ModificarIndividuo" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Modificar
            </button>
        </div>
    </form>
</div>
