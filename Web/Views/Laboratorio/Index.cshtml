@{
    ViewBag.Title = "Laboratorios";
}

@* Estilo del error *@
<style>
    form .error {
        color: red;
    }

    input.error {
        border-color: red;
    }
</style>

@* Creación Tabla laboratorios *@

<div id="DivTablaLaboratorio" class="card p-5 rounded">
    <table id="TablaLaboratorio" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
        <thead class="bg-light">
            <tr>
                <th>Nombre del Laboratorio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@* Formulario para agregar laboratorio *@

<div id="DivAgregarLaboratorio" style="display:none" class="container shadow-lg p-4">
    <form class="row" id="FormAgregarLaboratorio">
        <div class="col-12 pb-5">
            <label for="NombreLaboratorio" class="form-label">Nombre del Laboratorio</label>
            <input type="text" class="form-control" id="NombreLaboratorio" name="NombreLaboratorio">
            <div class="invalid-feedback"></div>
        </div>

        @* botones *@

        <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
            <button id="cancelButtonLaboratorio" type="button" class="btn btn-danger">
                <i class="fa-solid fa-rotate-left"></i> Cancelar
            </button>
            <button type="button" id="GuardarDatosLaboratorio" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Agregar
            </button>
        </div>
    </form>
</div>

<div id="DivModificarLaboratorio" style="display:none" class="container shadow-lg p-4">
    @* Aquí se mostrará el formulario de modificación *@
</div>

@section scripts {
    <script type="text/javascript" src="~/JSVistas/Laboratorios.js"></script>
}