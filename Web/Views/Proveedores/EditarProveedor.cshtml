@model modelo.Proveedores_VM

<div id="DivModificarProveedores"  class="container shadow-lg p-4">
    <form class="row" id="FormModicarProveedor">

        @Html.HiddenFor(model => model.IdProveedores)

        <div class="col-6 pb-5">
            <label for="Nombre" class="form-label">Nombre </label>
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="NombreContacto" class="form-label">Contacto Proveedor </label>
            @Html.EditorFor(model => model.NombreContacto, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="Telefono" class="form-label">Teléfono </label>
            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="Direccion" class="form-label">Dirección </label>
            @Html.TextAreaFor(
                model => model.Direccion,
                new {
                    @class = "form-control",
                    rows = "4",
                    id = "Direccion"
                }
            )
            <div class="invalid-feedback"></div>
        </div>
        <div class="col-6 pb-5">
            <label for="Email" class="form-label">Email </label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            <div class="invalid-feedback"></div>
        </div>

        @* botones *@

        <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
            <button id="cancelButton" type="button" class="btn btn-danger">
                <i class="fa-solid fa-rotate-left"></i> Cancelar
            </button>
            <button type="button" id="ModificarProveedor" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Modificar
            </button>
        </div>
    </form>
</div>