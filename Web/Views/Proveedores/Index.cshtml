﻿﻿
    @{
        ViewBag.Title = "Proveedores";
    }


    @* Estilo del error *@
    <style>
        form .error {
            color: red;
        }

        input.error {
            border-color: red;
        }
    </style>

    @* Creación Tabla individuos *@

    <div id="DivTablaProveedores" class="card p-5 rounded">
        <table id="TablaProveedores" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
            <thead class="bg-light">
                <tr>
                    <th>Nombre Proveedor</th>
                    <th>Nombre Contacto</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>


    @* campos a solicitar en la tabla *@

    <div id="DivAgregarProveedor" style="display:none" class="container shadow-lg p-4">
        <form class="row" id="FormAgregarProveedor">
            <div class="col-6 pb-5">
                <label for="NombreProveedor" class="form-label">Nombre </label>
                <input type="text" class="form-control" id="NombreProveedor" name="NombreProveedor">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="ContactoProveedor" class="form-label">Contacto Proveedor </label>
                <input type="text" class="form-control" id="ContactoProveedor" name="ContactoProveedor">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="TelefonoProveedor" class="form-label">Teléfono </label>
                <input type="text" class="form-control" id="TelefonoProveedor" name="TelefonoProveedor">
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="DireccionProveedor" class="form-label">Dirección </label>
                <textarea class="form-control" id="DireccionProveedor" name="DireccionProveedor"></textarea>
                <div class="invalid-feedback"></div>
            </div>
            <div class="col-6 pb-5">
                <label for="EmailProveedor" class="form-label">Email </label>
                <input type="text" class="form-control" id="EmailProveedor" name="EmailProveedor">
                <div class="invalid-feedback"></div>
            </div>

            @* botones *@

            <div style="text-align: right; background-color: #D3CECE;" class="p-2 pt-2">
                <button id="cancelButton" type="button" class="btn btn-danger">
                    <i class="fa-solid fa-rotate-left"></i> Cancelar
                </button>
                <button type="button" id="GuardarDatosProveedor" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Agregar
                </button>
            </div>
        </form>
    </div>

    <div id="DivModificarProveedor" style="display:none" class="container shadow-lg p-4">
        @*Aqui se muestra el html de la de copia*@
    </div>

    @section scripts {
        <script type="text/javascript" src="~/JSVistas/Proveedor.js"></script>
    }