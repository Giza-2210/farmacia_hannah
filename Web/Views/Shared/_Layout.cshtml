<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Sistema Farmacia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Cosas datatable *@
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
    <!-- DataTables Buttons CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.1.2/css/buttons.dataTables.min.css" />

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/4a564f3b34.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <!-- LiveSearch-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <!-- Logo / Título -->
            <a class="navbar-brand" href="#">Mi Dashboard</a>

            <div class="d-flex align-items-center ms-auto">

                <!--  Notificaciones con dropdown -->
                <div class="dropdown me-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none" id="notifDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="position-relative">
                            <i class="fa-solid fa-bell fa-lg"></i>
                            <!--  Contador -->
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">notificaciones no leídas</span>
                            </span>
                        </div>
                    </a>

                    <!-- Lista de notificaciones -->
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notifDropdown" style="width: 300px;">
                        <li class="dropdown-header fw-bold text-primary">Notificaciones</li>
                        <li><hr class="dropdown-divider"></li>

                        <!-- Ejemplo de notificaciones -->
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-plane-departure me-2 text-success"></i>Anthony solicitó una vacación</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-clock me-2 text-warning"></i>María pidió cambio de turno</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-file-circle-check me-2 text-info"></i>Se aprobó una capacitación</a></li>

                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center text-primary fw-semibold" href="#">Ver todas las notificaciones</a></li>
                    </ul>
                </div>

                <!-- Usuario con imagen y dropdown -->
                <!--  Usuario con imagen y dropdown -->
                <div class="dropdown">
                    <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://boomzappow.com/wp-content/uploads/2025/04/Vegapunk-Brain-Brain-Fruit.webp" alt="Usuario" class="rounded-circle me-2" width="35" height="35">

                        <!-- Bloque de texto con nombre y rol -->
                        <div class="d-flex flex-column align-items-start">
                            <span class="fw-semibold">Anthony Jackson</span>
                            <small class="text-white" style="align-self:center;">Administrador</small>
                        </div>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user-gear me-2"></i>Configuración Usuario</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="fa-solid fa-right-from-bracket me-2"></i>Logout</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </nav>



    <div class="d-flex" style="height: 100vh;">
        <!-- Sidebar -->
        <div class="sidebar p-3" id="sidebar">
            <h5 class="mb-4">Menú</h5>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="#" class="nav-link text-white">
                        <i class="fa-solid fa-house"></i> Inicio
                    </a>
                </li>

                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-white">
                        <i class="fa-solid fa-diagram-project"></i> Organización
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Areas")"><i class="fa-solid fa-building"></i> Áreas</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Cargos")"><i class="fa-solid fa-user-tie"></i> Cargos</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Departamento")"><i class="fa-solid fa-map"></i>Departamentos</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Municipio")"><i class="fa-solid fa-location-dot"></i> Municipios</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-white">
                        <i class="fa-solid fa-file-contract"></i> Colaboradores
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("IndexAdministracionPersonal", "DatosLaborales")"><i class="fa-solid fa-user-plus"></i> Contratación Directa</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-white">
                        <i class="fa-solid fa-clock"></i> Tiempo
                    </a>
                    <ul class="dropdown-menu">

                        <!-- Submenú Vacaciones -->
                        <li class="dropdown-submenu">
                            <a href="#" class="dropdown-item dropdown-toggle">
                                <i class="fa-solid fa-umbrella-beach"></i> Vacaciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-plane"></i> Solicitudes Vacaciones</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-users"></i> Solicitudes Mi Equipo</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-list-check"></i> Mis Solicitudes</a></li>
                            </ul>
                        </li>

                        <!-- Submenú Reportes -->
                        <li class="dropdown-submenu">
                            <a href="#" class="dropdown-item dropdown-toggle">
                                <i class="fa-solid fa-chart-line"></i> Reportes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-calendar-day"></i> Reporte de Asistencia</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fa-solid fa-clock-rotate-left"></i> Reporte de Horas</a></li>
                            </ul>
                        </li>

                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-white">
                        <i class="fa-solid fa-money-check-dollar"></i> Nómina
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-file-invoice-dollar"></i> Detalle</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle text-white">
                        <i class="fa-solid fa-shield-halved"></i> Seguridad
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user-gear"></i> Usuarios</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Index", "Roles")"><i class="fa-solid fa-layer-group"></i> Roles</a></li>
                    </ul>
                </li>
            </ul>
        </div>


        <!-- Contenido principal -->
        <div class="content p-4">
            <button id="toggleSidebar" class="toggle-btn mb-3">
                <i class="fa-solid fa-bars"></i>
            </button>

@*             <h3>Inicio</h3>
            <p>Aqui Va  el nombre de la vista</p> *@
            <div id="contenedorVista">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <!-- Extensiones para botones -->
    <script src="https://cdn.datatables.net/buttons/3.1.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.1.2/js/buttons.print.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.8/jquery.inputmask.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>