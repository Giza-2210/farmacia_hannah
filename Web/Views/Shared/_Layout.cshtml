                    <a href="@Url.Action("Index", "Presentaciones")" class="nav-link text-white">
                        <i class="fa-solid fa-mortar-pestle"></i> Presentaciones
                    </a>
                </li>

                <!-- Categoria -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Categoria")" class="nav-link text-white">
