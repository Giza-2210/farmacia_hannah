    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <!-- Logo / Título -->
            <a class="navbar-brand" href="#">Farmacia Hannah</a>

            <div class="d-flex align-items-center ms-auto">

                <!--  Notificaciones con dropdown -->
                <div class="dropdown me-4">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none" id="notifDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="position-relative">
                            <i class="fa-solid fa-bell fa-lg"></i>
                            <!--  Contador -->
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">notificaciones no leídas</span>
                            </span>
                        </div>
                    </a>

                    <!-- Lista de notificaciones -->
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notifDropdown" style="width: 300px;">
                        <li class="dropdown-header fw-bold text-primary">Notificaciones</li>
                        <li><hr class="dropdown-divider"></li>

                        <!-- Ejemplo de notificaciones -->
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-capsules me-2 text-success"></i>Se agotaron 3 medicamentos en inventario</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-triangle-exclamation me-2 text-warning"></i>Lote #A452 está próximo a vencer</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-file-medical me-2 text-info"></i>Se registró una nueva compra de proveedores</a></li>

                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center text-primary fw-semibold" href="#">Ver todas las notificaciones</a></li>
                    </ul>
                </div>

                <!--  Usuario con imagen y dropdown -->
                <div class="dropdown">
                    <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://img.freepik.com/free-vector/cute-panda-hug-bamboo-cartoon-vector-icon-illustration-animal-nature-icon-concept-isolated-premium_138676-5472.jpg" alt="Usuario" class="rounded-circle me-2" width="35" height="35">

                        <!-- Bloque de texto con nombre y rol -->
                        <div class="d-flex flex-column align-items-start">
                            <span class="fw-semibold">Mahiza Gonzalez</span>
                            <small class="text-white" style="align-self:center;">Administrador</small>
                        </div>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#"><i class="fa-solid fa-user-gear me-2"></i>Configuración Usuario</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="fa-solid fa-right-from-bracket me-2"></i>Logout</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </nav>



    <div class="d-flex" style="height: 100vh;">
        <!-- Sidebar -->
        <div class="sidebar p-3" id="sidebar">
            <h5 class="mb-4">Menú</h5>
            <ul class="nav flex-column">

                <!-- Inicio -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link text-white">
                        <i class="fa-solid fa-house"></i> Inicio
                    </a>
                </li>


                <!-- Medicamentos -->
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Medicamentos")" class="nav-link text-white">
